#!/bin/bash

APP="TicTacToe"

# Get a new version
bin/clean
bin/package

# If the installation folder exists under /tmp, remove it
test -f /tmp/${APP} && rm -r /tmp/${APP}
cp -r build/install/${APP} /tmp

# markdown to html
cp -f docs/* src/markdown
./gradlew markdownToHtml

# Run application once
/tmp/${APP}/bin/${APP}
